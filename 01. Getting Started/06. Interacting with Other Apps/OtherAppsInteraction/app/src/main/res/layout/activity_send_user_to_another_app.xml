<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.codeburrow.otherappsinteraction.SendUserToAnotherAppActivity">

        <Button
            android:id="@+id/map_intent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToViewMap"
            android:text="Intent to View a Map"/>

        <Button
            android:id="@+id/call_dial_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToDialNumber"
            android:text="Intent to Dial a Number"/>

        <Button
            android:id="@+id/default_dial_intent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToDialNumberWithDefaultApp"
            android:text="Intent to Dial a Number - Default App"/>

        <Button
            android:id="@+id/call_intent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToMakeCallWithDefaultApp"
            android:text="Intent to Make a Call - Default App"/>

        <Button
            android:id="@+id/web_page_intent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToViewWebPage"
            android:text="Intent to View a Web Page"/>

        <Button
            android:id="@+id/email_intent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToSendEmail"
            android:text="Intent to Send an Email"/>

        <Button
            android:id="@+id/calendar_intent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentToCreateCalendarEvent"
            android:text="Intent to Create a CalendarEvent"/>

    </LinearLayout>

</ScrollView>